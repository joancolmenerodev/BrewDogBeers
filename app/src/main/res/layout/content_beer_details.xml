<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_beer_details"
        tools:context=".feature.detailbeer.ui.BeerDetails">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal"
    >

        <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"

        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_beer_detail_name"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:text="Gin Blitz"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_beer_detail_tag_line"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:text="Botanical Berliner Weisse"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_beer_detail_abv"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="ABV : 25%"/>


    </LinearLayout>

    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               android:id="@+id/iv_beer_detail_image"
               android:layout_marginTop="8dp"
               android:layout_gravity="center_horizontal"
               tools:background="@mipmap/ic_launcher"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_beer_detail_description"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Description about the best beer in the world, this description can be big asf"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:layout_marginTop="8dp"
              android:textAppearance="@style/TextAppearance.AppCompat.Medium"
              android:text="@string/pairing_food_detail_text"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_beer_detail_pairing_food"
              android:layout_marginTop="8dp"
              tools:text="Patatas bravas\n Calamares a la romana\n Butifarra de huevo"/>


</LinearLayout>