<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:showIn="@layout/activity_beer_details"
            tools:context=".feature.detailbeer.ui.BeerDetails">


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"

        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_beer_detail_name"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:text="Gin Blitz"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_beer_detail_tag_line"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:text="Botanical Berliner Weisse"/>

        </LinearLayout>


        <ImageView android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:id="@+id/iv_beer_detail_image"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   tools:background="@mipmap/ic_launcher"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small"
                  android:text="@string/alcohol_by_volume_description_text"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_beer_detail_abv"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="25%"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small"
                  android:layout_marginTop="8dp"
                  android:text="@string/description_detail_text"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_beer_detail_description"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Description about the best beer in the world, this description can be big asf"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:layout_marginTop="8dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small"
                  android:text="@string/pairing_food_detail_text"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_beer_detail_pairing_food"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  tools:text="Patatas bravas\n Calamares a la romana\n Butifarra de huevo"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
