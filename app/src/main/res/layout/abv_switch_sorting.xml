<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ToggleButton
            android:id="@+id/abv_switch"
            android:layout_width="wrap_content"
            android:background="@drawable/abv_toggle_button_selector"
            android:textOff="@string/more_abv_toggle_text"
            android:textOn="@string/less_abv_toggle_text"
            android:layout_height="wrap_content"/>
</RelativeLayout>
